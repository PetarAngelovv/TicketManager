@model TicketManager.Web.ViewModels.Event.EventCreateInputModel

@{
    ViewData["Title"] = "Create New Event";
    Layout = "_Layout";
}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="elegant-card">
                <div class="card-content">
                    <h1 class="section-title mb-4">Create New Event</h1>

                    <form asp-action="Create" method="post">
                        <div class="row">
                            <div class="col-md-8 mb-3">
                                <label asp-for="Name" class="form-label">Event Name</label>
                                <input asp-for="Name" class="form-control" placeholder="Enter event name">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="CategoryId" class="form-label">Category</label>
                                <select asp-for="CategoryId" class="form-select" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))">
                                    <option value="">Select Category</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-8 mb-3">
                                <label asp-for="TicketPrice" class="form-label">Price ($)</label>
                                <input asp-for="TicketPrice" type="number" step="0.01" class="form-control" placeholder="0.00">
                                <span asp-validation-for="TicketPrice" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="TotalTickets" class="form-label">Total Tickets</label>
                                <input asp-for="TotalTickets" type="number" class="form-control" placeholder="Number of tickets">
                                <span asp-validation-for="TotalTickets" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageUrl" class="form-label">Image URL</label>
                            <input asp-for="ImageUrl" type="url" class="form-control" placeholder="https://example.com/image.jpg">
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Describe your event..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CreatedOn" class="form-label">Created On</label>
                            <input asp-for="CreatedOn" type="date" class="form-control" />
                            <span asp-validation-for="CreatedOn" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">

                            <a href="/Admin/Event" onclick="event.preventDefault(); window.location.href='/Admin/Event';"
                               class="btn elegant-btn elegant-btn-secondary">
                                <i class="fas fa-times me-2"></i> Cancel
                            </a>

                            <button type="submit" class="btn elegant-btn elegant-btn-primary">
                                <i class="fas fa-plus me-2"></i> Create Event
                            </button>

                        </div>
                    </form>
                  
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
