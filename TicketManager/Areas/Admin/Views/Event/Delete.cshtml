@using TicketManager.Web.ViewModels.Event;
@model EventDeleteInputModel;

@{
    ViewData["Title"] = "Delete Event";
    Layout = "_Layout";
}
<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title text-center">@Model.Name</h3>
                <p class="mb-0"><strong>Published By:</strong> @Model.Author</p>
                <p class="text-danger mt-3">
                    Are you sure you want to delete <strong>@Model.Name</strong>?
                </p>
            </div>
            <div class="card-footer d-flex justify-content-between">
                <form asp-action="ConfirmDelete" method="post">
                    @Html.AntiForgeryToken();
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Name" />
                    <input type="hidden" asp-for="AuthorId" />
                    <input type="hidden" asp-for="CategoryName" />
                    <input type="hidden" asp-for="TicketPrice" />
                    <input type="hidden" asp-for="TotalTickets" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Confirm Delete
                    </button>
                </form>

                <a asp-controller="Event" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="fas fa-times-circle"></i> Cancel
                </a>
            </div>
        </div>
    </div>
</div>
