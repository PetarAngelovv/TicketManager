@using TicketManager.Web.ViewModels.Event;
@model EventDeleteInputModel;

@{
    ViewData["Title"] = "Confirm Delete";
}
<form id="antiForgeryForm">
    @Html.AntiForgeryToken()
</form>
<h2>Are you sure you want to delete this event?</h2>

<p><strong>@Model.Name</strong></p>
<p>Category: @Model.CategoryName</p>
<p>Ticket Price: @Model.TicketPrice лв.</p>
<p>Total Tickets: @Model.TotalTickets</p>

<form asp-area="Manager" asp-controller="MyEvent" asp-action="ConfirmDelete" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="Id"/>
    <input type="hidden" asp-for="Name"/>
    <input type="hidden" asp-for="CategoryName" />
    <input type="hidden" asp-for="TicketPrice" />
    <input type="hidden" asp-for="TotalTickets" />
    <input type="hidden" asp-for="Description" />

    <div class="mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-danger"
                onclick="return confirm('Are you sure you want to delete this event?');">
            Yes, delete
        </button>
        <a asp-area="Manager" asp-controller="MyEvent" asp-action="Details" asp-route-id="@Model.Id"
           class="btn btn-secondary">Cancel</a>
    </div>
</form>
