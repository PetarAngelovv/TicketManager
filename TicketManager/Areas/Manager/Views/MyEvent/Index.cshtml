@using TicketManager.Web.ViewModels.Event;
@model IEnumerable<EventIndexViewModel>;

@{
    ViewData["Title"] = "My Events";
}
<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
    <a asp-area="Manager" asp-controller="MyEvent" asp-action="Create" class="btn btn-primary">Add Event</a>
</div>

<hr />

<div class="row text-center">
    @foreach (EventIndexViewModel _event in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100" style="width: 100%;">
                @if (!string.IsNullOrEmpty(_event.ImageUrl))
                {
                    <img src="@_event.ImageUrl" class="card-img-top" style="max-height: 150px; object-fit: contain;" alt="@_event.Name">
                }
                else
                {
                    <img src="~/images/default-image.jpg" class="card-img-top" style="max-height: 150px; object-fit: contain;" alt="No Image Available">
                }

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@_event.Name</h5>
                    <p class="card-text">Category: @_event.CategoryName</p>
                    <p class="card-text"><small>Favorites: @_event.SavedCount</small></p>

                    <div class="d-flex justify-content-between mt-auto">
                        <a asp-area="Manager" asp-controller="MyEvent" asp-action="Details" asp-route-id="@_event.Id" class="btn btn-info w-100">
                            <i class="fas fa-info-circle"></i> Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
