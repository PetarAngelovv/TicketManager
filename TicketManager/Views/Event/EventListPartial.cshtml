@using TicketManager.Web.ViewModels.Event
@model PaginatedEventsViewModel;

@if (!Model.Events.Any())
{
    <div class="no-events-message">
        ❗ There are no events available
    </div>
}
else
{
    <div class="container-fluid px-4">
        <div class="row g-4" id="eventsContainer">
            @foreach (var _event in Model.Events)
            {
                <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                    <div class="card event-card h-100">
                        <img src="@( _event.ImageUrl?.StartsWith("http") == true
                                         ? _event.ImageUrl
                                         : Url.Content(_event.ImageUrl ?? "~/images/default-image.jpg") )"
                     class="card-img-top"
                     alt="Event Image"
                     style="height: 200px; width: 100%; object-fit: cover;" />


                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@_event.Name</h5>

                            <div class="event-info">
                                📂 Category: @_event.CategoryName
                            </div>

                            <div class="event-info">
                                ❤️ Favorites: <span class="favorites-count">@_event.SavedCount</span>
                            </div>

                            <div class="event-info mb-3">
                                <span id="tickets-left-@_event.Id">🎟️ Tickets Left: @_event.TicketsLeft</span>
                            </div>

                            <button class="btn btn-details w-100"
                                    data-event-id="@_event.Id">
                                <i class="fas fa-info-circle"></i> Details
                            </button>

                            @if (User?.Identity?.IsAuthenticated == true && !_event.IsAuthor && !_event.IsSaved)
                            {
                                <button class="btn btn-save w-100"
                                        data-event-id="@_event.Id">
                                    <i class="fas fa-heart"></i> Save
                                </button>
                            }
                            else if (User?.Identity?.IsAuthenticated == true && !_event.IsAuthor && _event.IsSaved)
                            {
                                <a href="/Event/Favorites" class="btn btn-favorites w-100">
                                    <i class="fas fa-heart"></i> Go to Favorites
                                </a>
                            }

                            <div class="ticket-section">
                                @if (User?.Identity?.IsAuthenticated == true && !_event.IsAuthor && _event.TicketsLeft > 0)
                                {
                                    <label for="ticketQuantity-@_event.Id" class="form-label small text-muted">Number of tickets:</label>
                                    <input type="number"
                                           id="ticketQuantity-@_event.Id"
                                           name="ticketQuantity"
                                           min="1"
                                           max="@_event.TicketsLeft"
                                           value="1"
                                           required
                                           class="form-control ticket-input">

                                    <button class="btn btn-buy-ticket buy-ticket-btn w-100"
                                            data-event-id="@_event.Id">
                                        <i class="fas fa-ticket-alt"></i> 🎫 Buy Ticket
                                    </button>
                                }
                                else if (_event.TicketsLeft == 0)
                                {
                                    <button class="btn btn-sold-out w-100" disabled>
                                        🚫 Sold Out
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Page navigation" class="mt-5">
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link page-link-ajax" href="#"
                               data-page="@i"
                               data-term="@Model.SearchTerm"
                               data-category="@Model.CategoryId">
                                @i
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        }
    </div>
}